extends base.pug
block title 
    title Place Your Order Now !! | We provide best services 
block style 
    style
        include ../static/order.css
        include ../static/base.css
        
block content 
 
      
  <main>
      <section class="order-form">
        <h1>Place Your Order</h1>
        <p>Fill out the form below to order any of our IT services. Weâ€™ll get back to you shortly!</p>
        <form id="orderForm">
          <!-- Personal Information Section --> 
          <fieldset>
            <legend>Personal Information</legend>
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="name" required placeholder="Enter your name">

            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" required placeholder="Enter your email">

            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" name="phone" required placeholder="Enter your phone number">
          </fieldset>

          <!-- Service Selection Section -->
          <!-- Service Selection -->
          <fieldset>
            <legend>Service Details</legend>
            <div class="form-group">
              <label for="service">Select a Service:</label>
              <select id="service" name="service" required>
                <option value="" disabled selected>Select a service</option>
                <option value="AI">AI Solutions</option>
                <option value="Web Development">Web Development</option>
                <option value="Custom Software">Custom Software Development</option>
                <option value="DevOps">DevOps</option>
                <option value="App Development">App Development</option>
                <option value="Cyber Security">Cyber Security</option>
                <option value="Cloud Service">Cloud Services</option>
              </select>
            </div>

            <div class="form-group">
              <label for="subcategory">Select a Subcategory:</label>

              <select id="subcategory" name="subcategory" required>
                <option value="" disabled selected>Select a subcategory</option>
                <!-- AI Solutions -->
                <optgroup label="AI Solutions">
                  <option value="Machine Learning">Machine Learning</option>
                  <option value="Chatbots">Chatbots</option>
                  <option value="Natural Language Processing">Natural Language Processing</option>
                  <option value="Computer Vision">Computer Vision</option>
                  <option value="Predictive Analytics">Predictive Analytics</option>
                </optgroup>
                <!-- Web Development -->
                <optgroup label="Web Development">
                  <option value="Frontend Development">Frontend Development</option>
                  <option value="Backend Development">Backend Development</option>
                  <option value="Fullstack Project">Full Stack Development</option>
                  <option value="E-commerce">E-commerce Development</option>
                  <option value="Content Managment System">Content Managment System</option>
                </optgroup>
                <!-- Custom Software -->
                <optgroup label="Custom Software">
                  <option value="enterprise">Enterprise Software</option>
                  <option value="Customer Relationship Managment">Customer Relation Solutions</option>
                  <option value="Enterprise Resource Planning">Enterprise Resource Planning</option>
                  <option value="desktop">Desktop Applications</option>
                </optgroup>
                <!-- DevOps -->
                <optgroup label="DevOps">
                  <option value="CI/CD Piplines">CI/CD Pipelines</option>
                  <option value="Containerization (Docker, Kubernetes)">Containerization Docker</option>
                  <option value="Automation">Infrastructure Automation</option>
                  <option value="System Monitoring">System Monitoring & Logging</option>
                </optgroup>
                <!-- App Development -->
                <optgroup label="App Development">
                  <option value="Android App">Android Apps</option>
                  <option value="iOS App">iOS Apps</option>
                  <option value="Hybrid App">Hybrid Apps</option>
                  <option value="UI/UX Design">UI/UX Design</option>
                </optgroup>
                <!-- Cybersecurity -->
                <optgroup label="Cybersecurity">
                  <option value="Network Security">Network Security</option>
                  <option value="Cloud Security">Cloud Security</option>
                  <option value="Risk Assessment">Risk Assessment</option>
                  <option value="Penetration Testing">Penetration Testing</option>
                  <option value="Compliance Auditing">Compliance Auditing</option>
                </optgroup>
                <!-- Cloud Services -->
                <optgroup label="Cloud Services">
                  <option value="Cloud Migration">Cloud Migration</option>
                  <option value="Cloud Storage Solutions">Cloud Storage Solutions</option>
                  <option value="Cloud Computing">Cloud Computing</option>
                  <option value="Backup & Disaster Recovery">Backup & Disaster Recovery</option>
                  <option value="Cloud Management">Cloud Management</option>
                </optgroup>
              </select>

            </div>
          </fieldset>


          <!-- Project Details Section -->
          <fieldset>
            <legend>Project Details</legend>
            <label for="budget">Estimated Budget (in USD):</label>
            <input type="number" id="budget" name="budget" required placeholder="Enter your budget">

            <label for="deadline">Preferred Deadline:</label>
            <input type="date" id="deadline" name="deadline" required>

            <label for="details">Project Description:</label>
            <textarea id="details" name="details" rows="5" required placeholder="Describe your project..."></textarea>
          </fieldset>
        
          <!-- Submit Button -->
          <button type="submit" class="btn-submit" >Submit Order</button>
        </form>
      </section>
  </main>
 

    <!-- This is Footer Section -->
    <footer class="main-footer">
        <div class="footer-content">
            <!-- Left Column -->
            <div class="footer-column">
                <img src="../static/img/hacker.png" alt="IT_HUB" class="profile-logo">
                <p class="tagline">Empowering businesses through digital innovation.</p>
                <div class="social-icons">
                <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://x.com" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <!-- Middle Column -->
            <div class="footer-column">
                <h3>Contact Us</h3>
                <p><i class="fas fa-map-marker-alt"></i> 123 Tech Street, Multan, Pakistan</p>
                <p><i class="fas fa-envelope"></i> support@IT-HUB.com</p>
                <p><i class="fas fa-phone"></i> +92 319 1748730</p>
            </div>

            <!-- Right Column -->
            <div class="footer-column">
                <h3>Why Choose Us?</h3>
                <ul class="benefits">
                <li><i class="fas fa-check-circle"></i> Expert Development Team</li>
                <li><i class="fas fa-check-circle"></i> 24/7 Customer Support</li>
                <li><i class="fas fa-check-circle"></i> Fast & Reliable Solutions</li>
                </ul>
            </div>
            </div>

            <div class="footer-bottom">
            <p>&copy; 2025 Your Company. All rights reserved.</p>
        </div>
    </footer>
 
 
