                  <option value="fullstack">Full Stack Development</option>
                  <option value="ecommerce">E-commerce Development</option>
                  <option value="cms">CMS Development</option>
                </optgroup>
                <!-- Custom Software -->
                <optgroup label="Custom Software">
                  <option value="enterprise">Enterprise Software</option>
                  <option value="crm">CRM Solutions</option>
                  <option value="erp">ERP Systems</option>
                  <option value="desktop">Desktop Applications</option>
                </optgroup>
                <!-- DevOps -->
                <optgroup label="DevOps">
                  <option value="ci-cd">CI/CD Pipelines</option>
                  <option value="containerization">Containerization (Docker, Kubernetes)</option>
                  <option value="automation">Infrastructure Automation</option>
                  <option value="monitoring">System Monitoring & Logging</option>
                </optgroup>
                <!-- App Development -->
                <optgroup label="App Development">
                  <option value="android">Android Apps</option>
                  <option value="ios">iOS Apps</option>
                  <option value="hybrid">Hybrid Apps</option>
                  <option value="ui-ux">UI/UX Design</option>
                </optgroup>
                <!-- Cybersecurity -->
                <optgroup label="Cybersecurity">
                  <option value="network">Network Security</option>
                  <option value="cloud">Cloud Security</option>
                  <option value="risk">Risk Assessment</option>
                  <option value="penetration">Penetration Testing</option>
                  <option value="compliance">Compliance Auditing</option>
                </optgroup>
                <!-- Cloud Services -->
                <optgroup label="Cloud Services">
                  <option value="migration">Cloud Migration</option>
                  <option value="storage">Cloud Storage Solutions</option>
                  <option value="computing">Cloud Computing</option>
                  <option value="backup">Backup & Disaster Recovery</option>
                  <option value="management">Cloud Management</option>
                </optgroup>
              </select>

            </div>
          </fieldset>


          <!-- Project Details Section -->
          <fieldset>
            <legend>Project Details</legend>
            <label for="budget">Estimated Budget (in USD):</label>
            <input type="number" id="budget" name="budget" required placeholder="Enter your budget">

            <label for="deadline">Preferred Deadline:</label>
            <input type="date" id="deadline" name="deadline" required>

            <label for="details">Project Description:</label>
            <textarea id="details" name="details" rows="5" required placeholder="Describe your project..."></textarea>
          </fieldset>
        
          <!-- Submit Button -->
          <button type="submit" class="btn-submit" onclick="sendEMail()">Submit Order</button>
        </form>
